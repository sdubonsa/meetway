<body class="flex flex-col h-screen justify-between bg-slate-800">
    <%- include('../partials/header.ejs') %>
    <div class="text-white px-28 flex items-start justify-center flex-col mb-auto h-full">
        <div class="flex">
            <h2 class="text-xl mr-4"><%= event.title %></h2>
            <form class="flex items-center gap-3">
                <!-- EDIT BUTTON -->
                <button type="submit" formmethod="GET" formaction="/events/<%= event.id %>/edit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-square"
                        viewBox="0 0 16 16">
                        <path
                            d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                        <path fill-rule="evenodd"
                            d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                    </svg>
                </button>

                <!-- DELETE BUTTON -->
                <button type="submit" formmethod="POST" formaction="/events/<%= event.id %>?_method=DELETE">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash-fill"
                    viewBox="0 0 16 16">
                    <path
                        d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" />
                    </svg>
                </button>

            </form>
        </div>
        <div class="flex gap-4 mt-5">
            <img class='w-auto h-40' src="<%= event.image %>">
            <div class="text-slate-300">
                <p><span class="font-bold text-white">Host: </span>Default User</p>
                <p><span class="font-bold text-white">Date and Time: </span><%= event.starttime %> - <%= event.endtime %></p>
                <p><span class="font-bold text-white">Location: </span><%= event.location %></p>
                <p><span class="font-bold text-white">Details: </span><%= event.details %></p>
            </div>
        </div>
    </div>
    <%- include('../partials/footer.ejs') %>
</body>
