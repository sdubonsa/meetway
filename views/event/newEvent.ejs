<body class="flex flex-col h-screen justify-between bg-slate-800">
    <%- include('../partials/header.ejs') %>
        <div class="text-white flex px-20 items-start justify-center flex-col mb-auto h-full">
            <div class="bg-slate-500 h-4/5 w-full rounded-lg">
                <form action="/events" method="POST" enctype="multipart/form-data" class="flex flex-col m-4 h-full gap-2">
                    <div class="flex">
                        <label class="w-1/6" for="category">Category</label>
                        <select class="bg-slate-900 w-full p-1" name="category" id="category">
                            <option value="workshop">Workshop</option>
                            <option value="meetup">Meet Up</option>
                            <option value="careerfair">Career Fair</option>
                            <option value="headshot">Professional Headshot</option>
                            <option value="other">Other</option>
                        </select>
                    </div>

                    <div class="flex">
                        <label class="w-1/6" for="title">Title</label>
                        <input class="bg-slate-900 w-full p-1 rounded-r-md" type="text" id="title" name="title" placeholder="Title" required>
                    </div>

                    <div class="flex">
                        <label class="w-1/6" for="details">Details</label>
                        <input class="bg-slate-900 w-full p-1 h-20 rounded-r-md" type="text" name="details" id="details" placeholder="Description" required>
                    </div>

                    <div class="flex">
                        <label class="w-1/6" for="location">Location</label>
                        <input class="bg-slate-900 w-full p-1 rounded-r-md" type="text" name="location" id="location" placeholder="Location" required>
                    </div>

                    <div class="flex">
                        <label class="w-1/6" for="starttime">Start</label>
                        <input class="bg-slate-900 w-full p-1 rounded-r-md" type="datetime-local" name="starttime" id="starttime" required>
                    </div>

                    <div class="flex">
                        <label class="w-1/6" for="endtime">End</label>
                        <input class="bg-slate-900 w-full p-1 rounded-r-md" type="datetime-local" name="endtime" id="endtime" required>
                    </div>
                    
                    <div class="flex">                    
                        <label class="w-1/6" for="image">Image</label>
                        <input class="bg-slate-900 w-full p-1 rounded-r-md" type="file" name="image" id="image" required>
                    </div>

                    <input class="bg-green-900 h-10 rounded-md" type="submit" name="submit" id="submit" value="Create Event">
                </form>
            </div>
        </div>
    <%- include('../partials/footer.ejs') %>
</body>
